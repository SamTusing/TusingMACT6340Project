  <!-- Fonts & Bootstrap -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/aboutstyle.css">

  <style>
   

    /* Container holding background + gallery */
    .gallery-hero {
      position: relative;
      width: 100%;
      min-height: 600px; /* adjust height as needed */
      overflow: hidden;
    }

    /* Background image */
    .gallery-hero img.background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;
      filter: brightness(0.5); /* optional: darken for contrast */
    }

    /* Gallery sits on top */
    .gallery-container {
      position: relative;
      z-index: 2;
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      padding: 50px 20px;
    }

    .gallery-card img {
      width: 100%;
      max-width: 250px;
      border-radius: 8px;
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .gallery-card:hover img {
      transform: scale(1.05);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      cursor: pointer;
    }

    /* Optional page title over background */
    .page-title {
      position: absolute;
      top: 20px;
      width: 100%;
      text-align: center;
      font-size: 3rem;
      z-index: 3;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
    }

  </style>
</head>
<body>

<header>
  <%- include('header'); %>
</header>

<!-- Background + gallery container -->
<section class="gallery-hero">
  <img src="/images/whale.png" alt="Whale Background" class="background">
<div class="display-5 text-center text-white" style="margin-bottom: 50px;">
  Whales
</div>
  <div class="gallery-container">
    <a href="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whalegrid.jpg" target="_blank" class="gallery-card">
      <img src="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whalegrid.jpg" alt="Whale Grid">
    </a>
    <a href="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whalehorizontal.jpg" target="_blank" class="gallery-card">
      <img src="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whalehorizontal.jpg" alt="Whale">
    </a>
    <a href="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whaleoranges.jpg" target="_blank" class="gallery-card">
      <img src="https://tusing-nft-mint-cdn.sfo3.cdn.digitaloceanspaces.com/images/whaleoranges.jpg" alt="Whale and Fruit">
    </a>
  </div>
</section>

<footer class="container-fluid">
  <%- include('footer'); %>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
