<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/images/plague-doc.jpg">
  <title>Digital Art</title>
  <meta name="author" content="Samantha J. Tusing">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/featuredstyle.css">
</head>

<body>
  <!-- Header -->
  <header>
    <%- include('header'); %>
  </header>

  <main>
    <div class="spacer"></div>
    <div class="display-5 justify-content-center text-center text-black">Digital Art</div>

    <!-- Gallery Section -->
    <section class="container my-5">
      <div class="row g-4">
        <!-- Gallery Item 1 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art5.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Snorkel" 
               data-caption="Snorkel">
                   <div class="caption mt-2 text-black small">Snorkel</div>

        </div>
        <!-- Gallery Item 2 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art6.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Wheat and Flower" 
               data-caption="Wheat and Flower">
                   <div class="caption mt-2 text-black small">Wheat and Flower</div>

        </div>
        <!-- Gallery Item 3 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art7.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Rocket" 
               data-caption="Rocket">
                   <div class="caption mt-2 text-black small">Rocket</div>

        </div>
        <!-- Gallery Item 4 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art8.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Rose" 
               data-caption="Rose">
                   <div class="caption mt-2 text-black small">Rose</div>

        </div>
        <!-- Gallery Item 5 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art9.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Scuba" 
               data-caption="Scuba">
                   <div class="caption mt-2 text-black small">Scuba</div>

        </div>
        <!-- Gallery Item 6 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art10.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Pomegranate" 
               data-caption="Pomegranate">
                   <div class="caption mt-2 text-black small">Pomegranate</div>

        </div>
        <!-- Gallery Item 7 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/art11.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Bathtub" 
               data-caption="Bathtub">
                   <div class="caption mt-2 text-black small">Bathtub</div>

        </div>
        <!-- Gallery Item 8 -->
        <div class="col-sm-6 col-md-4 col-lg-3">
          <img src="/images/plague-doc.jpg" 
               class="img-fluid rounded shadow-sm gallery-item" 
               alt="Plague Doctor" 
               data-caption="Plague Doctor">
                   <div class="caption mt-2 text-black small">Plague Doctor</div>

        </div>
      </div>
    </section>

    <!-- Modal for full-size images -->
    <div class="modal fade" id="galleryModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content bg-dark">
          <div class="modal-body p-0 text-center">
            <img id="modalImage" src="" class="img-fluid rounded" alt="Full artwork">
            <div id="modalCaption" class="text-black py-2"></div>
          </div>
        </div>
      </div>
    </div>

  </main>

  <!-- Footer -->
  <div class="container-fluid">
    <%- include('footer'); %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Modal Script -->
  <script>
    const galleryItems = document.querySelectorAll('.gallery-item');
    const modalImage = document.getElementById('modalImage');
    const modalCaption = document.getElementById('modalCaption');

    galleryItems.forEach(item => {
      item.addEventListener('click', () => {
        modalImage.src = item.src;
        modalCaption.textContent = item.dataset.caption || item.alt;
        const modal = new bootstrap.Modal(document.getElementById('galleryModal'));
        modal.show();
      });
    });
  </script>
</body>
</html>
